{
  "name": "nextjs-web3",
  "private": false,
  "scripts": {
    "prepare": "husky install",
    "dev": "next",
    "docker": "chmod +x docker.sh && ./docker.sh",
    "watch": "tsc -w -p ./tsconfig.json",
    "build": "next build",
    "start": "next start -p 8080",
    "pre-commit": "lint-staged",
    "type-check": "tsc -p ./tsconfig.json --pretty --noEmit",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "prettier": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "release": "standard-version"
  },
  "lint-staged": {
    ".": "npm run type-check",
    ".**/*.{js,jsx,ts,tsx}": [
      "npm run lint:fix",
      "npm run prettier:fix"
    ]
  },
  "dependencies": {
    "@chakra-ui/next-js": "^2.1.5",
    "@chakra-ui/react": "^2.8.1",
    "@dynamic-labs/ethereum": "^0.19.4",
    "@dynamic-labs/magic": "^0.19.4",
    "@dynamic-labs/sdk-react-core": "^0.19.4",
    "@dynamic-labs/wagmi-connector": "^0.19.4",
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@fontsource/open-sans": "^5.0.17",
    "@lifi/sdk": "^2.5.0",
    "@reduxjs/toolkit": "^1.9.7",
    "framer-motion": "^10.16.4",
    "next": "latest",
    "next-nprogress-bar": "^2.1.2",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-icons": "^4.12.0",
    "react-redux": "^8.1.3",
    "redux-persist": "^6.0.0",
    "wagmi": "^1.4.5"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.2.0",
    "@commitlint/config-conventional": "^18.1.0",
    "@types/node": "^20.4.5",
    "@types/react": "^18.2.17",
    "@types/react-dom": "^18.2.7",
    "bun-types": "^1.0.14",
    "eslint": "^8.53.0",
    "eslint-config-next": "latest",
    "eslint-config-prettier": "^9.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.0.2",
    "prettier": "^3.0.3",
    "standard-version": "^9.5.0"
  },
  "peerDependencies": {
    "typescript": "^5.1.6",
    "@tanstack/react-query": "^4.36.1",
    "viem": "^1.18.6",
    "ethers": "^5.7.2"
  },
  "browser": {
    "fs": false,
    "path": false
  }
}
